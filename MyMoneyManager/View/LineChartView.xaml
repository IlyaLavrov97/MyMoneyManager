<UserControl x:Class="MyMoneyManager.View.LineChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyMoneyManager.View"
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:MyMoneyManager.ViewModel"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:LineChartViewModel />
    </UserControl.DataContext>

    <Grid>

        <lvc:LineChart Name="Chart"
                       Grid.Row="2"
                       DisableAnimations="False"
                       LegendLocation="Right"
                       Series="{Binding Series}">
            <lvc:LineChart.AxisY>
                <lvc:Axis Title="Sold Items"
                          IsMerged="False"
                          Position="LeftBottom" />
            </lvc:LineChart.AxisY>
            <lvc:LineChart.AxisX>
                <lvc:Axis Title="Month" Labels="{Binding Path=AxisX}" />
            </lvc:LineChart.AxisX>
        </lvc:LineChart>
    </Grid>
</UserControl>
