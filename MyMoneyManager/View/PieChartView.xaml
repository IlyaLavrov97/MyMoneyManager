<UserControl x:Class="MyMoneyManager.View.PieChartView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyMoneyManager.View"
             xmlns:lvc="clr-namespace:LiveCharts;assembly=LiveCharts"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:MyMoneyManager.ViewModel"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <UserControl.DataContext>
        <viewmodels:PieChartViewModel />
    </UserControl.DataContext>

    <Grid>
        <lvc:PieChart Name="Chart" LegendLocation="Left" Series="{Binding Path=Series}">
            <lvc:PieChart.AxisY>
                <lvc:Axis Title="Sold Items" />
            </lvc:PieChart.AxisY>
            <lvc:PieChart.AxisX>
                <lvc:Axis Title="Month" Labels="Jan, Feb , Mar, Apr, May, Jun" />
            </lvc:PieChart.AxisX>
        </lvc:PieChart>
    </Grid>
</UserControl>
